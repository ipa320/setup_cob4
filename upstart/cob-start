#!/bin/bash

set -e
ROBOT=myrobot

pcs="
$ROBOT-b1
$ROBOT-t1
$ROBOT-t2
$ROBOT-t3
$ROBOT-s1
$ROBOT-h1"

# define ASUS camera pcs
camera_client_list="
$ROBOT-t1
$ROBOT-t3
$ROBOT-s1"

for i in $pcs; do 
    until ping -c1 $i &>/dev/null; do
        echo $i not found
    done
    echo $i alive
done

for i in $camera_client_list; do 
    Check_cam=false
    while [[ !$Check_cam ]]
      do
	echo $(date)
        if ssh $i stat /tmp/check_done \> /dev/null 2\>\&1
          then
            echo "$i File exists"
            Check_cam=true
            break
          else
            echo "$i File still does not exist"
        fi
      sleep 1
    done
done

function log() {
  logger -s -p user.$1 ${@:2}
}

/usr/sbin/cob-command start
